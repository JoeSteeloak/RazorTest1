<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RazorTest1</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RazorTest1.styles.css" asp-append-version="true" />
</head>

<body>
    <header class="d-flex justify-content-between align-items-center">
        <a class="navbar-brand" asp-area="" asp-page="/Index">RazorTest1</a>
        <div class="date">
            <p>Dagens Datum är: @DateTime.Now.ToString("yyyy-MM-dd")</p>
        </div>
    </header>

    <div class="container d-flex" style="margin-top: 20px;"> <!-- Lägg till d-flex här -->
        <!-- Sidomeny -->
        <div class="sidebar" style="width: 25%;"> <!-- Fast bredd på navbaren -->
            <nav class="nav flex-column">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index">Start</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Razor">Razor</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/About">Om sidan</a>
                    </li>
                </ul>
            </nav>
        </div>

        <!-- Huvudinnehåll -->
        <main role="main" class="flex-grow-1"> <!-- Flex-grow gör att main fyller resten av bredden -->
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            <p>av Jonas Ståleker - Kontakta mig via e-post: jost2306@student.miun.se</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
